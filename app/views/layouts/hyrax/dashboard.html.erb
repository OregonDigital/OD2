<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>" prefix="og: http://ogp.me/ns#">
  <head>
    <%= render partial: 'layouts/head_tag_content' %>
    <%= content_for(:head) %>
  </head>

  <body data-spy="scroll" data-target=".bs-docs-sidebar" class="dashboard">
    <div class="skip-to-content">
      <%= link_to "Skip to Content", "#skip-to-content" %>
    </div>
    <%= render '/masthead' %>
    <%= content_for(:navbar) %>
    <div id="content-wrapper">
      <div class="sidebar maximized">
        <%= render 'hyrax/dashboard/sidebar' %>
      </div>
      <div class="container">
        <%= render_breadcrumbs builder: Hyrax::BootstrapBreadcrumbsBuilder %>
      </div>
      <div class="main-content maximized" role="main">
        <%= render '/flash_msg' %>
        <% if content_for?(:page_header) %>
          <div class="row">
            <div class="col-xs-12 main-header">
              <%= yield(:page_header) %>
            </div>
          </div>
        <% end %>

          <a data-name="skip-to-content" id="skip-to-content"></a>
          <%= content_for?(:content) ? yield(:content) : yield %>

      </div>

    <!-- /#content-wrapper -->
    <%= render 'shared/ajax_modal' %>
  </body>
</html>
