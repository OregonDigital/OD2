<% doc_presenter = index_presenter(document) %>
<%# partial to display solr document fields in catalog index gallery view -%>
<dl class="document-metadata dl-horizontal dl-invert">

  <% index_fields(document).each do |field_name, field| -%>
    <% if should_render_index_field? document, field %>
	    <dt class="blacklight-<%= field_name.parameterize %>"><%= render_index_field_label document, field: field_name %></dt>
	    <dd class="blacklight-<%= field_name.parameterize %>"><%= doc_presenter.field_value field %></dd>
    <% end -%>
  <% end -%>

</dl>
<%# OVERRIDE FROM BLACKLIGHT to add resource type icon %>
<%= render 'index_type_icon', document: document unless document.type_label.first.empty? %>
<%= doc_presenter.field_value index_fields(document)['type_label_tesim'] %>
