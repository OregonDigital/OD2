<%= form_tag search_form_action, method: :get, class: "form-horizontal search-form", id: "facet-search-form-facet", role: "search", 'aria-label': "Filter Results" do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:search_field, :qt, :page, :utf8)) %>
  <%= hidden_field_tag :search_field, 'all_fields', id: 'facet_search_field' %>
  <div class="form-group">

    <label class="sr-only" for="facet-search-field-facet">
      <%= t("hyrax.search.form.facet.label") %>
    </label>

    <div class="input-group">
      <label class="sr-only" for="facet-search-field-facet">Search within the results</label>
      <%= text_field_tag 'q[]', nil , class: "q form-control", id: "facet-search-field-facet", placeholder: "Search within the results" %>
      <button type="submit" class="" id="facet-search-submit-facet">
        <i class="fa fa-search"></i>
        <span class="sr-only">Search</span>
      </button>
    </div><!-- /.input-group -->

  </div><!-- /.form-group -->
<% end %>
