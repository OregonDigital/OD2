<div class="masonry document collection">
  <div class="thumbnail">
    <%= link_to(url_for_document(document)) do |body| %>
      <span class="gradient-wrapper"><%= image_tag thumbnail_url(document), alt: "" %></span>
      <h3>
        <%= document.title_or_label.truncate(89).html_safe %>
        <% if current_ability.admin? ? false : controller.institution_restricted?(document.id) %>
          <span class="glyphicon glyphicon-lock"></span>
        <% end %>
      </h3>
      <span class="dark-grey">(<%= controller.total_viewable_items(document.id) %>)</span>
    <% end %>
  </div>
  <%= render_document_partials document, blacklight_config.view_config(:masonry).partials, :document_counter => document_counter %>
</div>