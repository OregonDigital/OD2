<div class="masonry document col-xs-6 col-md-3">
  <div class="thumbnail">
    <%= link_to(url_for_document(document), document_link_params(document, :counter => document_counter_with_offset(document_counter))) do |body| %>
      <%= image_tag thumbnail_url(document) %>
      <h3 class="">
        <%= truncate(index_presenter(document).label(document_show_link_field(document)), length: 89) %>
      </h3>
    <% end %>

    <% unless document.collection? %>
      <p class="pull-left">
        <input type="checkbox" onfocus="setMasonryCheckbox(this)" onblur="setMasonryCheckbox(this)" onchange="setMasonryCheckbox(this)" name="batch_document_ids[]" id=<%="batch_document_#{document.id}"%> value=<%= document.id %> class="batch_document_selector">
      </p>
    <% end %>
  </div>
  <%= render_document_partials document, blacklight_config.view_config(:masonry).partials, :document_counter => document_counter %>
</div>