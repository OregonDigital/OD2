<h2 class='sr-only'>ExploreCollections</h2>

<div class='text-center'>
  <ul class='nav nav-pills visible-all-inline-block'>
    <li class="active"><a data-toggle="pill" href="#all">All</a></li>
    <li><a data-toggle="pill" href="#osu">Oregon State University</a></li>
    <li><a data-toggle="pill" href="#uo">University of Oregon</a></li>
    <li><a data-toggle="pill" href="#my">My Collections</a></li>
  </ul>
</div>

<div class="tab-content">
  <div id="all" class="tab-pane fade in active">
    <h3 class='sr-only'>All collections</h3>
    <div data-behavior="masonry-gallery">
      <%= render 'masonry_showcase', collections: controller.collections %>
    </div>
  </div>
  <div id="osu" class="tab-pane fade">
    <h3 class='sr-only'>Oregon State University collections</h3>
    <div class="masonry-gallery">
      <%= render 'masonry_showcase', collections: controller.osu_collections %>
    </div>
  </div>
  <div id="uo" class="tab-pane fade">
    <h3 class='sr-only'>University of Oregon collections</h3>
    <div class="masonry-gallery">
      <%= render 'masonry_showcase', collections: controller.uo_collections %>
    </div>
  </div>
  <div id="my" class="tab-pane fade">
    <h3 class='sr-only'>My collections</h3>
    <div data-behavior="masonry-gallery">
      <%= render 'masonry_showcase', collections: controller.my_collections %>
    </div>
  </div>
</div>
