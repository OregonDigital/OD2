<div aria-labelledby="<%= facet_field_id(facet_field) %>-header" role="group" class="panel facet_limit blacklight-<%= facet_field.key %> <%= 'facet_limit-active' if facet_field_in_params?(facet_field.key) %>">
  <div class="collapse-toggle panel-heading">
    <h3 class="panel-header p-0 facet-field-heading" id="<%= facet_field_id(facet_field) %>-header">
      <button
        type="button"
        class="btn btn-block panel-title collapse-toggle <%= "collapsed" if should_collapse_facet?(facet_field) %>"
        data-toggle="collapse"
        data-target="#<%= facet_field_id(facet_field) %>"
        aria-expanded="<%= should_collapse_facet?(facet_field) ? 'false' : 'true' %>"
        aria-controls="<%= facet_field_id(facet_field) %>"
      >
        <%= facet_field_label(facet_field.key) %>
      </button>
    </h3>
  </div>
  <div id="<%= facet_field_id(facet_field) %>" class="panel-collapse facet-content collapse <%= "in" unless should_collapse_facet?(facet_field) %>" aria-expanded="<%= should_collapse_facet?(facet_field) ? 'false' : 'true' %>">
    <div class="panel-body">
      <%= yield %>
    </div>
  </div>
</div>

