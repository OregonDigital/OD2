<h1 class="h2 text-center" style="margin-bottom:2em">Forgot your password?</h1>
<div class="lime-green-hr" style="margin-bottom:1em"></div>
  <%= render "devise/shared/error_messages", resource: resource %>

<%= render "devise/shared/links" %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="flex-container password-reset-form devise-form">
    <div class="field flex-item">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions flex-item">
      <%= f.submit "Send me reset password instructions" %>
    </div>
  </div>
<% end %>