<% provide :page_header do %>
  <h1><%= t('.manage_oembeds_html', cc: curation_concern) %></h1>
<% end %>

<div class="panel panel-default tabs">
  <div class="panel-heading">
    <h2 class="panel-title"><%= t('.header.current') %></h2>
  </div>
  <div class="panel-body">
    <%= simple_form_for [main_app, curation_concern] do |f| %>
      <fieldset class="set-access-controls">
        <% if curation_concern.respond_to?(:errors) && curation_concern.errors.count.positive? %>
          <section class="help-block">
            <p>
              <%= t('.oembed_broken_html') %>
            </p>
          </section>
        <% end %>

        <div class="form-group">
          <%= render 'oregon_digital/base/form_oembed_url', curation_concern: curation_concern, f: f  %>
        </div>
      </fieldset>

      <div class="row">
        <div class="col-md-12 form-actions">
          <%= f.submit t('.oembed_apply'), class: 'btn btn-primary' %>
          <%= link_to t('.oembed_cancel'), oembeds_path, class: 'btn btn-default' %>
          <%= link_to t('.oembed_return'), edit_polymorphic_path([main_app, curation_concern]), class: 'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
