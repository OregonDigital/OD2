<%= form_tag search_form_action, method: :get, class: "form-horizontal search-form", id: "explore-collection-search", role: "search" do |f| %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <%= hidden_field_tag :search_field, 'all_fields', id: 'explore-collection-search-field' %>
  <div class="form-group">

    <label for="explore-collection-search" class="sr-only">
      <%= t('oregon_digital.explore_collections.search_form.label') %>
    </label>

    <div class="input-group">
      <%= text_field_tag 'q[]', nil, class: "collection-query form-control", placeholder: t('oregon_digital.explore_collections.search_form.placeholder'), size: '30', type: "search", id: "explore-collection-search" %>
      <button type="submit" class="" id="collection_submit">
        <i class="fa fa-search"></i>
        <span class="sr-only">Search</span>
      </button>
    </div><!-- /.input-group -->
  </div><!-- /.form-group -->
<% end %>
