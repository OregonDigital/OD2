<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>
<div id="per_page-dropdown" class="h4">
  <%= t('blacklight.search.per_page.title') %>
  <div class="btn-group">
    <button type="button" id="search-per-page-button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-controls="search-per-page-list" aria-expanded="false" aria-haspopup="true">
      <%= t(:'blacklight.search.per_page.button_label', :count => current_per_page) %> <span class="caret"></span>
    </button>
    <ul id="search-per-page-list" class="dropdown-menu" role="menu" aria-labelledby="search-per-page-button">
      <%- per_page_options_for_select.each do |(label, count)| %>
        <li role="menuitem"><%= link_to(label, url_for(search_state.params_for_search(per_page: count))) %></li>
      <%- end -%>
    </ul>
  </div>
</div>
<% end %>