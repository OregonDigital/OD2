<%= form_tag search_form_action, method: :get, class: "form-horizontal search-form", id: "header-search-form-header", role: "search" do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <%= hidden_field_tag :search_field, 'all_fields', id: 'header_search_field' %>
  <div class="form-group">

    <label class="sr-only" for="header-search-field-header">
      <%= t("hyrax.search.form.q.label", application_name: application_name) %>
    </label>

    <div class="input-group">
      <%= text_field_tag :q, current_search_parameters , class: "q form-control", id: "header-search-field-header" %>
      <button type="submit" class="" id="header-search-submit-header">
        <i class="fa fa-search"></i>
        <span class="sr-only">Search</span>
      </button>
    </div><!-- /.input-group -->

  </div><!-- /.form-group -->
  <%= link_to 'Advanced', BlacklightAdvancedSearch::Engine.routes.url_helpers.advanced_search_path, class: 'advanced-link' %>
<% end %>
