<% if show_sort_and_per_page? and active_sort_fields.many? %>
<div id="sort-dropdown" class="btn-group">
  <button type="button" id="search-sorts-button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-controls="search-sort-list" aria-expanded="false" aria-haspopup="true">
      <%= t('blacklight.search.sort.label', :field =>sort_field_label(current_sort_field.key)) %> <span class="caret"></span>
  </button>

  <ul id="search-sort-list" class="dropdown-menu" role="menu">
      <%- active_sort_fields.each do |sort_key, field_config| %>
        <li role="menuitem"><%= link_to(sort_field_label(sort_key), main_app.url_for(search_state.params_for_search(sort: sort_key))) %></li>
      <%- end -%>
  </ul>
</div>
<% end %>
