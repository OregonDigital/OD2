<%# OVERRIDE FROM HYRAX change work title to h1 %>
<% presenter.title.each_with_index do |title, index| %>
  <div class="row">
    <div class="col-sm-6">
      <% if index == 0 %>
        <h1><%= title %>
          <% if !current_user.nil? && current_user.admin? %>
            <small class="text-muted"><%= presenter.permission_badge %> <%= presenter.workflow.badge %></small>
          <% end %>
        </h1>
      <% else %>
        <h1><%= title %></h1>
      <% end %>
    </div>
    <div class="col-sm-3">
      <div id="copyright-work-show" class="copyright-header">
        <i class="large-icon fa fa-<%= presenter.solr_document.rights_statement_to_fa_class(presenter.rights_statement.first) %>" aria-hidden="true"></i>
        <%= %(<a href=#{ERB::Util.h(presenter.rights_statement.first)}>#{Hyrax.config.rights_statement_service_class.new.label(presenter.rights_statement.first) { presenter.rights_statement.first }}</a>).html_safe %>
      </div>
    </div>
    <div class="col-sm-3 text-right">
      <% if index == 0 %>
        <%= render "show_actions", presenter: presenter %>
      <% end %>
    </div>
  </div>
<% end %>
