<%= "<h2 id=\"Content Warning\">Content Warning</h2>".html_safe %>
<%= "<h3 id=\"Blur Image\">Blur Image</h3>".html_safe %>
<p> Would you like to blur your image?</p>
<ul>
  <li class="radio">
    <label>
      <%= f.input :mask_content, as: :check_boxes, label: false, collection: ['Item Show Page', 'Search Results Page'] %>
    </label>
  </li>
</ul>

<%= "<h3 id=\"Content Warning Statement\">Content Warning Statement</h3>".html_safe %>
<p class="help-block" id="content_alert_help"><%= t('simple_form.hints.defaults.content_alert') %></p>

<% @default_content_alert = (f.object.content_alert.blank? || (f.object.content_alert == t('hyrax.content_warning.content_alert'))) %>
<ul>
  <li class="radio">
    <label>
      <%= f.radio_button :content_alert, t('hyrax.content_warning.content_alert'), checked: @default_content_alert %>
      <%= t('hyrax.content_warning.content_alert') %>
    </label>
  </li>
  <li class="radio">
    <label>
      <%= f.radio_button :content_alert, f.object.content_alert, checked: !@default_content_alert, class: 'content_alert_custom_radio', label: "Custom Content Warning Message" %>
      <textarea value="<%= f.object.content_alert unless @default_content_alert %>" cols='100' rows='5' class='content_alert_box' id='content_alert' onKeyup='copyContentWarningValue(event);' placeholder='Custom Content Warning Message...'><%= f.object.content_alert unless @default_content_alert %></textarea>
    </label>
  </li>
</ul>