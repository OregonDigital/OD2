<h1>
    <%= @presenter %> <%= @presenter.try(:workflow).try(:badge) %>
</h1>
<% if @parent_presenter %>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to @parent_presenter, polymorphic_path([main_app, @parent_presenter]) %></li>
    </ul>
    <%= render 'tombstoned_work', presenter: @parent_presenter if @tombstoned %>
<% else %>
    <%= render 'tombstoned_work', presenter: @presenter if @tombstoned %>
<% end %>
