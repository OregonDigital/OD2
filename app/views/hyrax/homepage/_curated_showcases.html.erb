<ol id="curated-showcases-first" class="row box-row">
    <% collections[0..3].each_with_index do |collection, i| %>
      <li class="recent-item col-xs-12 col-sm-6 col-md-3">
        <%= render 'showcase_tile',
              title: collection.title_or_label,
              content: collection.description.first.to_s.gsub("\n", "</p><p>").html_safe,
              link: [hyrax, collection],
              img: render_thumbnail_tag(collection, {}, { suppress_link: true }) %>
      </li>
    <% end %>
</ol>
<ol id="curated-showcases-second" class="row box-row">
    <% collections[4..7].each_with_index do |collection, i| %>
      <li class="recent-item col-xs-12 col-sm-6 col-md-3">
        <%= render 'showcase_tile',
              title: collection.title_or_label,
              content: collection.description.first.to_s.gsub("\n", "</p><p>").html_safe,
              link: [hyrax, collection],
              img: render_thumbnail_tag(collection, {}, { suppress_link: true }) %>
      </li>
    <% end if collections.length > 4 %>
</ol>
