<div class="masonry collection document">
  <% parent = document.parents.first %>
  <div class="thumbnail">
    <%= link_to(url_for_document(parent), document_link_params(parent, :counter => document_counter_with_offset(document_counter)))  do |body| %>
      <span class="gradient-wrapper"><%= image_tag(thumbnail_url(document), alt: "", style: 'width:100%')%></span>
      <span class="visible-all-inline h5 hover-over-collection-text">
        <%= truncate(index_presenter(parent).heading, length: 89) %>
      </span>
    <% end %>
  </div>
</div>