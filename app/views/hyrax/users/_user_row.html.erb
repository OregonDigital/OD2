<tr>
  <%# OVERRIDE FROM HYRAX to disable avatar link entirely if no avatar file given %>
  <td><%= link_to hyrax.user_path(user) do %>
        <%= image_tag(user.avatar.url(:thumb), width: 30) %>
      <% end if user.avatar.file %>
  </td>
   <td><%= link_to user.name, hyrax.user_path(user) %></td>
   <td><%= link_to user.user_key, hyrax.user_path(user) %></td>
   <td><%= user.department %></td>
   <td><%= number_of_works(user) %></td>
   <td><%= !user.deactivated? %></td>
</tr>
