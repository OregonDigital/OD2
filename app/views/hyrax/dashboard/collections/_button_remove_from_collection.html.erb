<%= form_for collection,
  url: hyrax.dashboard_collection_path(collection),
  method: :put,
  namespace: collection.id,
  html: {
    onsubmit: 'return confirm("This will remove the item from this collection. Do you wish to continue?")',
    class: 'remove_from_collection'
  },
  as: 'collection' do |f| %>
  <%= single_item_action_remove_form_fields(f, document) %>
  <%= f.submit label, class: "btn collection-remove #{btn_class}", data: { disable_with: false } %>
<% end %>
