
<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% page_display = number_with_delimiter(page.to_s) %>

<li class="page-item <%= 'active' if page.current? %>">
  <% if page.current? %>
    <span class="page-link" tabindex="0" aria-current="true"><%= page_display %></span>
  <% else %>
    <%= link_to page_display, url, :remote => remote, :rel => page.next? ? 'next' : page.prev? ? 'prev' : nil, class: 'page-link'%>
  <% end %>
</li>