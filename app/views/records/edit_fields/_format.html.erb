<%= f.input key,
            as: :controlled_vocabulary,
            placeholder: 'Search for a format',
            input_html: {
              class: 'form-control',
              data: { 'autocomplete-url' => "/authorities/search/format",
                      'autocomplete' => key.to_s + '_ld' }
            },
            ### Required for the ControlledVocabulary javascript:
            wrapper_html: { data: { 'autocomplete-url' => "/authorities/search/format",
                                    'field-name' => key.to_s + '_ld' }},
            required: f.object.required?(key) %>
