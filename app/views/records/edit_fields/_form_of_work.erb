<%= f.input key,
            as: :controlled_vocabulary,
            placeholder: 'Search for a Form of Work using a valid URI',
            input_html: {
              class: 'form-control',
              data: { 'autocomplete-url' => "/authorities/search/form_of_work",
                      'autocomplete' => key,
                      'field-type' => 'linked_data' }
            },
            ### Required for the ControlledVocabulary javascript:
            wrapper_html: { data: { 'autocomplete-url' => "/authorities/search/form_of_work",
                                    'field-name' => key,
                                    'field-type' => 'linked_data' }},
            required: f.object.required?(key) %>
