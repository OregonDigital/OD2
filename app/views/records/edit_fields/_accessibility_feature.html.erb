<%# SELECTION: Create a dropdown list fetching from the accessibility feature %>
<% accessibility_feature_service = OregonDigital::AccessibilityFeatureService.new %>
<%= f.input :accessibility_feature,
    as: :multi_value_select,
    collection: accessibility_feature_service.select_active_options,
    include_blank: true,
    item_helper: accessibility_feature_service.method(:include_current_value),
    input_html: { class: 'form-control' } %>
