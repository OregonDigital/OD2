<%= f.input key,
            as: :label_and_uri_controlled_vocabulary,
            placeholder: 'Search for a Species using a valid URI',
            input_html: {
              class: 'form-control',
              data: { 'autocomplete-url' => "/authorities/search/scientific",
                      'autocomplete' => key,
                      'field-type' => 'linked_data' }
            },
            ### Required for the ControlledVocabulary javascript:
            wrapper_html: {
                class: 'controlled_vocabulary',
                data: { 'autocomplete-url' => "/authorities/search/scientific",
                        'field-name' => key,
                        'field-type' => 'linked_data' }},
            required: f.object.required?(key) %>
