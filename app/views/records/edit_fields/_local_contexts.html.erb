<!-- SELECTION: Create a dropdown list fetching from the local context -->
<% local_context_service = OregonDigital::LocalContextService.new %>
<%= f.input :local_contexts,
    as: :multi_value_select,
    collection: local_context_service.select_active_options,
    include_blank: true,
    item_helper: local_context_service.method(:include_current_value),
    input_html: { class: 'form-control' } %>