<h2><%= t('role-management.index.title') %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Role </th>
      <th> Action </th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= link_to "Manage #{role.name.gsub("_"," ").capitalize} Role", role_management.role_path(role), class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  <tbody>
</table>

<% if can? :create, Role %>
  <%= button_to t('role-management.index.create'), role_management.new_role_path, method: :get, class: 'btn btn-primary' %>
<% end %>
