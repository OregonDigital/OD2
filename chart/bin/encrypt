#!/bin/bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
cd $DIR/../../chart

REPO=$(basename $(git config --get remote.origin.url))
NAMESPACE=${REPO%.git} 

if [ -z "$1" ] || [ -z "$2" ]
then
    echo './chart/bin/encrypt ENVIRONMENT TEAM'
    exit 1
fi

keybase encrypt -i $1-values.yaml -o $1-values.yaml.enc --team $2